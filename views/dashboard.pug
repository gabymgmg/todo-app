extends layout

block content
  .container
    .row
      .col-md-8.offset-md-2
        .card
          .card-header
            h2.text-center  Tasks
            .d-flex.justify-content-end
              button.btn.btn-primary.me-2(type="button" data-bs-toggle="modal" data-bs-target="#addTaskModal") 
                i.fas.fa-plus 
                | Add Task
              button.btn.btn-secondary(type="button") Filter 

          .card-body
            table.table.mt-3
              thead
                tr
                  th Title
                  th Description
                  th Status
                  th Actions
                  tbody
                each task in tasks
                  tr
                    td #{task.title}
                    td #{task.description}
                    td #{task.status ? 'Completed' : 'Pending'} 
                    td
                      a.btn.btn-sm.btn-primary(href=`/tasks/${task.id}`) Edit
                      button.btn.btn-sm.btn-danger(onclick=`deleteTask(${task.id})`) Delete
